---
const { title, date, description, link } = Astro.props;
---

<a href={link}
   class="block bg-pandaCream/70 rounded-2xl p-5 shadow-md hover:shadow-xl transition">
  <h3 class="font-heading text-2xl text-pandaRed mb-2">{title}</h3>
  <p class="text-sm text-pandaBrown/70 mb-2">{date}</p>
  <p class="text-pandaBrown/90">{description}</p>
</a>
