---
const { title, tech, description, link, image } = Astro.props;
import { Image } from 'astro:assets';
---

<a href={link} class="block bg-pandaCream/70 rounded-2xl overflow-hidden shadow-md hover:shadow-xl hover:-translate-y-1 hover:bg-pandaCream transition-transform duration-200">
  <Image 
    src={image}
    alt={title}
    loading="eager"
    widths={[320, 480, 640]}
    sizes="(max-width: 768px) 100vw, 400px"
    format="webp"
    decoding="sync"
    class="w-full h-48 object-cover" 
    />
  <div class="p-5">
    <h3 class="font-heading text-2xl text-pandaRed mb-2">{title}</h3>
    <p class="text-pandaBrown/90 mb-3">{description}</p>
    <p class="text-sm text-pandaBrown/80 font-medium">ðŸ§° {tech}</p>
  </div>
</a>
